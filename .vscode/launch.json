{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "emulicious-debugger",
            "request": "launch",
            "name": "DebugColor",
            "program": "${workspaceFolder}/bin/gbc/rom_Debug.gbc",
            "port": 58870,
            "stopOnEntry": false,
            "additionalSrcFolders": "${env:ZGB_PATH}",
            "emuliciousPath": "${env:ZGB_PATH}/../../env/Emulicious/Emulicious.jar",
            "preLaunchTask": "DebugColor"
        },
        {
            "type": "emulicious-debugger",
            "request": "launch",
            "name": "ReleaseColor",
            "program": "${workspaceFolder}/bin/gbc/rom.gbc",
            "port": 58870,
            "stopOnEntry": false,
            "additionalSrcFolders": "${env:ZGB_PATH}",
            "emuliciousPath": "${env:ZGB_PATH}/../../env/Emulicious/Emulicious.jar",
            "preLaunchTask": "ReleaseColor"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "enter program name, for example ${workspaceFolder}/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}